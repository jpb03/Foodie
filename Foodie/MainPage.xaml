<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodie.MainPage"
             Title="Inicio"
             BackgroundColor="#fffaf5">
    <StackLayout Padding="20" Spacing="15">
        <Label x:Name="welcomeLabel" FontSize="24" HorizontalOptions="Center" />
        <Button Text="📖 Recetas" Clicked="OnRecetasClicked" />
        <Button Text="🍳 Desayuno" Clicked="OnDesayunoClicked" />
        <Button Text="🍛 Almuerzo" Clicked="OnAlmuerzoClicked" />
        <Button Text="🍰 Postres" Clicked="OnPostresClicked" />
        <Button Text="🔓 Cerrar sesión" Clicked="OnLogoutClicked" />
    </StackLayout>
</ContentPage>